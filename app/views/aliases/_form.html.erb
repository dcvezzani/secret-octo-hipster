<%= form_for([@client, @alias], html: {"data-load" => "#aliases", class: "form-horizontal"}) do |f| %>
  <% if @alias.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@alias.errors.count, "error") %> prohibited this alias from being saved:</h2>

      <ul>
      <% @alias.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group" style="display: none; ">
    <%#= f.label :client_id %>
    <%#= f.number_field :client_id %>
  </div>

  <div class="control-group">
    <%= f.label :value, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :value %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit nil, class: "btn" %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  alias_patch.bloom("form");
</script>

